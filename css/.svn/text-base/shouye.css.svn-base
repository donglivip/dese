*{padding: 0;margin: 0;}
html,body,.wrapper{width:100% ;height: 100%;overflow: hidden;}
.wrapper{
	background: #ffffff;
}
a{text-decoration: none;}
.header{
	height: .96rem;
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding:  0 .3rem;
	background: #b91c24;
	overflow: hidden;
}
.jinji{display: flex;}
.header-aside{
	width: .3rem;
	display: flex;
	align-items: center;
	justify-content: center;
}
.header-aside img{
	height: .4rem;
}

.swiper-pagination-bullet{
	background: #FF8686 ;
	width: .15rem;
	height: .06rem;
}
.swiper-pagination-bullet-active{
	background: #c30e21 ;
	width: .3rem;
	height: .06rem;
}
.header-text{
	font-size: .36rem;
	color: #000000 ;
}
.main{
	height: calc(100% - 2.1rem);
	overflow-x: hidden;
	overflow-y: scroll;
}
.xuanfu{
	height: 3rem;
	width: .8rem;
	background: #c30e21 ;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	position: fixed;
	top: 5.5rem;
	right:0 ;
	z-index: 99;
}
.xuanfu img{
	height: .6rem;
	margin-bottom: .2rem;
}
.xuanfu-text{
	font-size: .32rem;
	color: #FFFFFF;
	font-weight: 600;
	width: .24rem;
}
.top{
	display: flex;
	align-items: center;
	justify-content: center;
	width: 100%;
	height: .8rem;
	background: #c30e21 ;
}
.top img{
	height: .4rem;
	margin-right: .1rem;
}
.top-text{
	font-size: .36rem;
	color: #FFFFFF ;
	font-weight: 700;
}
.main-one{
	height: 4.5rem;	
	border-radius: .1rem;
}
.main-one img{
	width: 100%;
}
.main-two{
	height: 1rem;
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 0 .3rem;
}
.two-text{
	font-size: .32rem;
	color: #c30e21;
	border-left: 3px solid #c30e21;
	padding-left: .12rem;
	font-weight: 600  ;
}
.main-two img{
	height: .36rem;
}
.main-three{
	display: flex;
	align-items: center;
}
.three-box{
	margin: 0 .3rem;
	width: 100%;
}
.three-box img{
	height: 2.1rem;
	width: 2.1rem;
	border-radius:.08rem ;
}
.three{flex: 1;margin: 0 .25rem;display: flex;flex-direction: column;}
.three-text{
	font-size: .28rem;
	color: #000000 ;
	flex: 1;
}
.three-hezi{
	display: flex;
	align-items: center;
	justify-content: flex-start;
	height: .5rem;
}
.three-news{
	font-size: .2rem;
	color: #c30e21 ;
	margin-right: .1rem;
	font-size: .28rem;
	font-weight: 600;
}
.three-word{
	font-size: .2rem;
	color: #767676 ;
	text-decoration: line-through;
}
.main-four{
	height: 2.4rem;
	display: flex;
	align-items: center;
	justify-content: flex-start;
	padding: 0 .3rem;
}
.four-lift{
	height: 2.1rem;
	width: 2.1rem;
	overflow: hidden;
	margin-right: .4rem;
}
.four-lift img{
	width: 100%;
	border-radius: .08rem;
	height: 100%;
}
.four-right{
	height: 2.1rem;
	width: 4.5rem;
}
.four-text{
	font-size: .28rem;
	color: #141414 ;
	height: 1rem;
	line-height: .5rem;
	overflow: hidden;
}
.four-box{
	display: flex;
	align-items: center;
	justify-content: flex-start;
	height: .5rem;
	margin-top: .7rem;
}
.four-news{
	font-size: .35rem;
	color: #c30e21 ;
	margin-right: .1rem;
	font-weight: 600;
}
.four-word{
	font-size: .2rem;
	color: #4A4A4A ;
	text-decoration: line-through;
}
.bottom{
	height: 1.1rem;
	display: flex;
	align-items: center;
	justify-content: space-around;
}
.bottom-box{
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}
.bottom-box img{
	height: .4rem;
	margin-bottom: .08rem;
}
.bottom-news{
	font-size: .2rem;
	color: #4A4A4A  ;
}
.bottom-text{
	font-size: .2rem;
	color: #c30e21 ;
}
.oldprice{
	color: gainsboro;
	text-decoration: line-through;
	font-size: .2rem;
}
.nav{
	display: flex;
	flex-wrap: wrap;
}
.nav-tab{
	width: 25%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	font-size: .2rem;
}
.nav-tab img{
	height: .8rem;
	margin: .2rem;
}
.mylogo{
	height: 1.2rem;
	margin-right: .1rem;
	
}
.header-text{
	display: flex;
	align-items: center;
	justify-content: center;
	flex: 1;
}
